generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  profile   Profile?
  createdAt DateTime @default(now())
}

model Profile {
  id           Int     @id @default(autoincrement())
  user         User    @relation(fields: [userId], references: [id])
  userId       Int     @unique
  age          Int?
  gender       String?
  heightCm     Int?
  weightKg     Float?
  goal         String?
  activity     String?
  dietType     String?
  createdAt    DateTime @default(now())
}

model Nutrition {
  id        Int     @id @default(autoincrement())
  name      String
  protein   Float
  calories  Int
  category  String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

model Workout {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  title       String
  primary     String?
  equipment   String?
  level       String?
  imageUrl    String?
  description String?
  createdAt   DateTime @default(now())
}

model WeeklyPlan {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  config    Json
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProgressEntry {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  date      DateTime
  weightKg  Float
  notes     String?
}

model ChecklistItem {
  id       Int     @id @default(autoincrement())
  user     User    @relation(fields: [userId], references: [id])
  userId   Int
  date     DateTime
  key      String
  value    Json
  done     Boolean @default(false)
}